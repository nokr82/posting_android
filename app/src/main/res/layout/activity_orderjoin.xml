<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/finishLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/x" />


    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="82.2dp"
            android:layout_marginRight="62dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16.67dp"
                android:textColor="#20408C"
                android:text="사업자 회원가입"
                 />


            <TextView
                android:layout_marginTop="41.87dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사업자 회원정보입력"
                android:textColor="#888888"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34.71dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/OfficeET"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="사업자등록번호"
                    android:paddingLeft="7dp"
                    android:textSize="11.33sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <EditText
                    android:id="@+id/pwET"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="비밀번호"
                    android:paddingLeft="7dp"
                    android:inputType="textPassword"
                    android:textSize="11.33sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <EditText
                    android:id="@+id/pw2ET"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="비밀번호 확인"
                    android:paddingLeft="7dp"
                    android:textSize="11.33sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <EditText
                    android:id="@+id/StoreET"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="상호명(6자이하)"
                    android:maxLength="6"
                    android:paddingLeft="7dp"
                    android:textSize="11.33sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

            </LinearLayout>


            <TextView
                android:layout_marginTop="42.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사업자 정보입력"
                android:textColor="#888888"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34.71dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ceoET"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="7dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="대표자 성명"
                    android:textSize="11.33sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <Spinner
                    android:id="@+id/StoreSP"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="사업장 주소"
                    android:background="@null"
                    android:textSize="11.33sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />
                <TextView
                    android:id="@+id/SchoolTX"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:textColor="#BCBEC0"
                    android:hint="학교 검색(1개 선택)"
                    android:textSize="11.33sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phoneET"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="7dp"
                        android:layout_weight="1"
                        android:hint="휴대폰"
                        android:inputType="number"
                        android:background="@null"
                        android:textSize="11.33sp" />


                    <TextView
                        android:id="@+id/agreeTX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인증받기"
                        android:textSize="7dp"
                        android:textColor="#20408C"
                        android:layout_gravity="center_vertical"

                         />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/phon" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="85.73dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24.5dp"
                    android:layout_height="16.25dp"
                    android:text="약관"
                    android:textSize="12.25dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">

                <CheckBox
                    android:id="@+id/allCK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#20408C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체 약관에 동의합니다"
                    android:textColor="#20408C"
                    android:textSize="9.33dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/serviceCK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서비스 이용 약관 동의"
                    android:textSize="9.5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="포스팅 이용약관"
                    android:textSize="11.67dp" />


                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </WebView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31.66dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/soloCK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개인정보 수집 및 이용동의"
                        android:textSize="9.75dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개인정보취급방침"
                    android:textSize="13dp" />

                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                </WebView>

                <TextView
                    android:id="@+id/PostingStartTX"
                    android:layout_width="match_parent"
                    android:layout_height="37.51dp"
                    android:gravity="center"
                    android:text="POSTING 시작하기"
                    android:textSize="15.33dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/background_round_01b0b9"
                    android:layout_marginTop="52.93dp"
                     />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>