<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <posting.devstories.com.posting_android.base.RationalRelativeLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_707070"
        app:ratio="960:500"
       >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">


          <TextView
              android:id="@+id/titleTV"
              android:padding="10dp"
              android:textColor="#20408C"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="My Posting"/>
          <View
              android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:layout_alignParentBottom="true"
              android:background="#A19F9B"

              />
        <LinearLayout
           android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="21dp">

        <TextView
            android:id="@+id/delTV"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="삭제"
              android:textColor="#888888"/>
          <TextView
              android:id="@+id/modiTV"
              android:layout_marginTop="15.8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="수정"
              android:textColor="#888888"/>
          <TextView
              android:id="@+id/recyTV"
              android:layout_marginTop="15.8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="재사용"
              android:textColor="#888888"/>

        </LinearLayout>

      </LinearLayout>







    </posting.devstories.com.posting_android.base.RationalRelativeLayout>



</LinearLayout>