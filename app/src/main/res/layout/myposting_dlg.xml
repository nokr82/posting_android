<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <posting.devstories.com.posting_android.base.RationalRelativeLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:ratio="960:515"
        android:background="@drawable/background_round_ffffff">

      <LinearLayout
          android:layout_marginLeft="25.4dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">


          <TextView

              android:textColor="#20408C"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="My Posting"/>
          <View
              android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:layout_alignParentBottom="true"
              android:background="#A19F9B"

              />
        <LinearLayout
           android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
              android:layout_marginLeft="21dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="삭제"
              android:textColor="#888888"/>
          <TextView
              android:layout_marginTop="15.8dp"
              android:layout_marginLeft="21dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="수정"
              android:textColor="#888888"/>
          <TextView
              android:layout_marginTop="15.8dp"
              android:layout_marginLeft="21dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="재사용"
              android:textColor="#888888"/>
          <TextView
              android:layout_marginTop="15.8dp"
              android:layout_marginLeft="21dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="숨기기"
              android:textColor="#888888"/>
        </LinearLayout>

      </LinearLayout>







    </posting.devstories.com.posting_android.base.RationalRelativeLayout>



</LinearLayout>