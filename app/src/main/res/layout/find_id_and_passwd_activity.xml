<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/finishLL"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/x"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textSize="16.67dp"
                android:textColor="#20408C"
                android:text="비밀번호 찾기"/>



            <LinearLayout
                android:layout_marginTop="118dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="이름"
                    android:paddingLeft="7dp"
                    android:id="@+id/nameET"
                    android:background="@null"
                    android:textSize="8.5dp"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="가입 이메일"
                    android:paddingLeft="7dp"
                    android:textSize="8.5dp"
                    android:background="@null"
                    android:id="@+id/emailET"
                    android:inputType="textEmailAddress"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888"/>

                <TextView
                    android:layout_marginTop="42.37dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="비밀번호 찾기"
                    android:textSize="15.33dp"
                    android:textColor="#20408C"
                    android:background="#FEDA44"
                    android:id="@+id/findTV"
                    android:layout_gravity="center"/>

<LinearLayout
    android:layout_marginTop="345dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="#20408C"
        android:textSize="15dp"
        android:text="가입메일 확인이 필요하신분은"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="#20408C"
        android:textSize="15dp"
        android:text="(주)위포스팅 고객센터로 문의 주시기 바랍니다."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="#20408C"
        android:textSize="15dp"
        android:text=" weposting@gmail.com"/>


</LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>