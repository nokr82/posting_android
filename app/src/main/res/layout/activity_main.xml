<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/univIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/school"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/whitebar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/glass" />

            <EditText
                android:id="@+id/SearchET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:hint="검색"
                android:textColor="#A19F9B"
                android:textSize="14sp"
                android:background="@null"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/freeRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/freeTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="자유"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#01b4ec"
                android:id="@+id/freeV"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/infoRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/infoTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="정보"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/infoV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/studyRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="스터디"
                android:id="@+id/StudyTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/StudyV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="동아리"
                android:id="@+id/classTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/classV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/meetingRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="미팅"
                android:id="@+id/MitingTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/mitingV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/couponRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="쿠폰"
                android:id="@+id/CouponTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/couponV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <posting.devstories.com.posting_android.base.NonSwipeableViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pagerVP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </posting.devstories.com.posting_android.base.NonSwipeableViewPager>

        <LinearLayout
            android:id="@+id/mainLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="23.37dp"
                    android:layout_height="22.42dp"
                    android:src="@mipmap/home" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <posting.devstories.com.posting_android.base.RationalRelativeLayout
                        android:id="@+id/adverRL"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:ratio="360:146">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/adverVP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </android.support.v4.view.ViewPager>

                        <LinearLayout
                            android:id="@+id/circleLL"
                            android:layout_width="match_parent"
                            android:layout_height="7.35dp"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginBottom="7dp">

                        </LinearLayout>

                    </posting.devstories.com.posting_android.base.RationalRelativeLayout>

                    <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
                        android:id="@+id/mainLV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:divider="@null"
                        android:dividerHeight="5dp"
                        android:listSelector="@null"
                        android:layout_marginTop="5dp">

                    </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888" />

    <LinearLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/HomeLL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23.37dp"
                android:layout_height="22.42dp"
                android:src="@mipmap/noclickhome" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/WriteLL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23.37dp"
                android:layout_height="22.42dp"
                android:src="@mipmap/plus" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"

            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/MyLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="알림"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11.75dp">

                <ImageView
                    android:layout_width="23.37dp"
                    android:layout_height="22.42dp"
                    android:src="@mipmap/clickmy" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textSize="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@drawable/circle_red"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:paddingLeft="2.5dp"
                    android:paddingRight="2.5dp"
                    />


            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:background="#D0D0D0"
                />




        </RelativeLayout>






    </LinearLayout>




</LinearLayout>

