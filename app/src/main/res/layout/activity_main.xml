<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.app.FragmentTabHost
        android:id="@+id/fragmentFT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
                android:id="@+id/fragmentFL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


        </FrameLayout>

    </android.support.v4.app.FragmentTabHost>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888" />

    <LinearLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/homeLL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeIV"
                android:layout_width="23.37dp"
                android:layout_height="22.42dp"
                android:src="@mipmap/home" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/writeLL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/writeIV"
                android:layout_width="23.37dp"
                android:layout_height="22.42dp"
                android:src="@mipmap/plus" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"

            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/myPageLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="알림"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11.75dp">

                <ImageView
                    android:id="@+id/myPageIV"
                    android:layout_width="23.37dp"
                    android:layout_height="22.42dp"
                    android:src="@mipmap/my" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textSize="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@drawable/circle_red"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:paddingLeft="2.5dp"
                    android:paddingRight="2.5dp"
                    />


            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:background="#D0D0D0"
                />




        </RelativeLayout>






    </LinearLayout>




</LinearLayout>

