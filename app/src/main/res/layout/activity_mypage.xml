                    android:textColor="#8F8E8A"/>
                <TextView
                    android:id="@+id/nickTV"
                    android:layout_marginTop="15.13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14.67dp"
                    android:text="닉네임 변경"
                    android:textColor="#8F8E8A"/>
                <TextView
                    android:id="@+id/outTV"
                    android:layout_marginTop="15.13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
