<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/finish3LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/x" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/menu"/>



            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="내 정보/설정"
                android:textColor="#063588"
                android:textSize="15.67dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="51dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/myproIV"
                        android:layout_width="68.05dp"
                        android:layout_height="68.05dp"
                        android:src="@mipmap/alram_my" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="post_0904"
                            android:textSize="15.6dp" />


                        <TextView
                            android:id="@+id/infonameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12.8dp"
                            android:gravity="center"
                            android:text="손나은 / 연세대 13학번 "
                            android:textColor="#8F8E8A"
                            android:textSize="14.6dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="51dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_round_ffe330"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="TODAY 잔여 포스팅"
                            android:textColor="#063588"
                            android:textSize="15.6dp" />


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:background="@drawable/background_round_ffffff"
                            android:gravity="center">

                            <TableRow
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                        android:padding="5dp"
                                        android:gravity="center"
                                        android:text="   11/1 THU"
                                        android:textColor="#063588"
                                        android:textSize="10dp"/>

                                <TextView
                                        android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="스터디"
                                    android:textColor="#8F8E8A"
                                    android:textSize="10dp" />

                                <TextView
                                        android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="동아리"
                                    android:textColor="#8F8E8A"
                                    android:textSize="10dp" />

                                <TextView
                                        android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="미팅"
                                    android:textColor="#8F8E8A"
                                    android:textSize="10dp" />


                            </TableRow>

                            <TableRow
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView

                                    android:gravity="center"
                                    android:text="붙이기"
                                    android:textColor="#8F8E8A"
                                    android:textSize="10dp" />

                                <TextView

                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#8F8E8A"
                                    android:textSize="18dp" />

                                <TextView

                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#8F8E8A"
                                    android:textSize="18dp" />

                                <TextView

                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#8F8E8A"
                                    android:textSize="18dp" />


                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:gravity="center"
                                    android:text="떼기"
                                    android:textColor="#8F8E8A"
                                    android:textSize="10dp" />

                                <TextView
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="#8F8E8A"
                                    android:textSize="18dp" />

                                <TextView
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="#8F8E8A"
                                    android:textSize="18dp" />

                                <TextView
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#8F8E8A"
                                    android:textSize="18dp" />
                            </TableRow>

                        </TableLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.2dp"
                android:layout_marginTop="55.33dp"
                android:paddingLeft="15.33dp"
                android:text="계정"
                android:textColor="#063588"
                android:textSize="11.67dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#D0D0D0" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.33dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/schoolTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="학교인증"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

                <TextView
                    android:id="@+id/profileTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="프로필 이미지 변경"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

                <TextView
                    android:id="@+id/nickTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="닉네임 변경"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

                <TextView
                    android:id="@+id/outTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="회원 탈퇴"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

                <TextView
                    android:id="@+id/joinoutTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="로그아웃"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.2dp"
                android:layout_marginTop="31dp"
                android:paddingLeft="15.33dp"
                android:text="앱 설정"
                android:textColor="#063588"
                android:textSize="11.67dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#D0D0D0" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.33dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/alramTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.13dp"
                        android:layout_weight="1"
                        android:text="알림 설정"
                        android:textColor="#8F8E8A"
                        android:textSize="14.67dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                    android:gravity="center_vertical">

                        <Switch
                                android:layout_marginTop="15dp"
                                android:id="@+id/alramSW"
                                android:layout_width="95.84dp"
                                android:layout_height="13dp"
                                android:checked="true"
                        android:background="@drawable/background_round_ffe330"/>



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/appTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.2dp"
                android:layout_marginTop="31dp"
                android:paddingLeft="15.33dp"
                android:text="앱 정보"
                android:textColor="#063588"
                android:textSize="11.67dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#D0D0D0" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.33dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15.13dp"
                        android:text="앱 버전"
                        android:textColor="#8F8E8A"
                        android:textSize="14.67dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.13dp"
                        android:layout_weight="1"
                        android:text="1.0.0"
                        android:textColor="#8F8E8A"
                        android:textSize="14.67dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15.13dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/background_round_ffe330"
                        android:gravity="center"
                        android:text="앱 업데이트"
                        android:textColor="#8F8E8A"
                        android:textSize="14.67dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/questTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="Q＆A"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

                <TextView
                    android:id="@+id/warringTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="공지사항"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

                <TextView
                    android:id="@+id/postingTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="포스팅 이용규칙"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.13dp"
                    android:text="개인정보 처리방침"
                    android:textColor="#8F8E8A"
                    android:textSize="14.67dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>






</LinearLayout>
