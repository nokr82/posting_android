        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:textSize="14.67dp"
        android:text="1.0.0"
        android:textColor="#8F8E8A"/>





</LinearLayout>

                <TextView
                    android:id="@+id/questTV"
                    android:layout_marginTop="15.13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14.67dp"
                    android:text="문의하기"
                    android:textColor="#8F8E8A"/>
