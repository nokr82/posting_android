<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/postRL"
        android:layout_width="139dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true">

        <ImageView
            android:id="@+id/postbgIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="9dp"
            android:adjustViewBounds="true">

            <LinearLayout
                android:id="@+id/couponLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FBCA2B"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingRight="3dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/coupon_orderTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="STARBUCKS연대점"
                    android:textColor="#FFFFFF"
                    android:textSize="9dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                            android:id="@+id/coupon_titleTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="커피음료"
                            android:textColor="#FFFFFF"
                            android:textSize="11dp"
                            android:visibility="visible" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/coupon_saleTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="right"
                                    android:text="30"
                                    android:textColor="#FFFFFF"
                                    android:textSize="28dp"
                                    android:visibility="visible" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <TextView
                                        android:id="@+id/coupon_TV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="%"
                                        android:textColor="#FFFFFF"
                                        android:textSize="11dp"
                                        android:visibility="visible" />

                                <TextView
                                        android:id="@+id/coupon_sale2TV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="할인"
                                        android:textColor="#FFFFFF"
                                        android:textSize="11dp"
                                        android:visibility="visible" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/coupon_contentTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="아메무료"
                            android:textSize="9dp"
                            android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/coupon_startdateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:text="18.11.03 ~"
                        android:textColor="#FFFFFF"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/coupon_enddateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18.12.01"
                        android:textColor="#FFFFFF"
                        android:textSize="9dp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/postIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone">

            </ImageView>

            <TextView
                android:id="@+id/contentsTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="#3E3A39"
                android:textSize="13dp"
                android:visibility="gone"
                android:ellipsize="end"/>

            <LinearLayout
                android:id="@+id/countLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/nemocount"
                android:gravity="center"
                android:padding="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leftCntTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="17.67dp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>