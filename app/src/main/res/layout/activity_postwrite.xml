<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#D0D0D0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/finishLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="16dp">

            <Spinner
                android:id="@+id/meetingSP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null">

            </Spinner>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="48dp"
                android:src="@mipmap/semo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner

                    android:id="@+id/mostSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null">

                </Spinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/semo" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/nextTX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15.3dp"
            android:text="다음"
            android:textColor="#063588"
            android:textSize="11.5dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center"
        >


        <RelativeLayout
            android:layout_width="286.02dp"
            android:layout_height="292.67dp"
            android:background="@mipmap/wtite_bg"
            android:gravity="center"
             >

            <RelativeLayout
                    android:id="@+id/imgRL"
                android:layout_width="247.23dp"
                android:layout_height="261.21dp"
               >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgIV2"
                    android:scaleType="centerCrop"/>



            </RelativeLayout>






        </RelativeLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">


        <GridView
            android:id="@+id/listGV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numColumns="4"
            >

        </GridView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="11.75dp"
            android:gravity="center"
            android:text="갤러리"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="#D0D0D0"
          />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cameraRL"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="카메라"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11.75dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#D0D0D0"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/textRL"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TEXT"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11.75dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
              android:visibility="invisible"
                android:background="#D0D0D0"
               />
        </RelativeLayout>






    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888" />

    <LinearLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23.37dp"
                android:layout_height="22.42dp"
                android:src="@mipmap/noclickhome" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23.37dp"
                android:layout_height="22.42dp"
                android:src="@mipmap/plus" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"

            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="알림"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11.75dp">

                <ImageView
                    android:layout_width="23.37dp"
                    android:layout_height="22.42dp"
                    android:src="@mipmap/clickmy" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textSize="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@drawable/circle_red"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:paddingLeft="2.5dp"
                    android:paddingRight="2.5dp"
                    />


            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:background="#D0D0D0"
                />




        </RelativeLayout>






    </LinearLayout>








</LinearLayout>






