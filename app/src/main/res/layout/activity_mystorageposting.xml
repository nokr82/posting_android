<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/myIV"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/myimg"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="post_0904"
                android:gravity="center_vertical"/>


            <ImageView
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu"
                />





        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#D0D0D0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37.15dp"

            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="11.75dp"
                    android:gravity="center"
                    android:text="Posting"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="#063588"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Storage"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="11.75dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="#D0D0D0"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="알림"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="11.75dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textSize="10dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@drawable/circle_red"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:paddingLeft="2.5dp"
                        android:paddingRight="2.5dp"
                        />


                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible"
                    android:background="#D0D0D0"
                    />




            </RelativeLayout>






        </LinearLayout>




    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/freeRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="자유"
                android:id="@+id/freeTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#01b4ec"
                android:id="@+id/freeV"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/infoRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="정보"
                android:id="@+id/infoTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/infoV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/studyRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="스터디"
                android:id="@+id/StudyTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/StudyV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="동아리"
                android:id="@+id/classTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/classV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/meetingRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="미팅"
                android:id="@+id/MitingTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/mitingV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/couponRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="쿠폰"
                android:id="@+id/CouponTX"
                android:textColor="#99a0a0"
                android:textSize="12.95dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/couponV"
                android:background="#01b4ec"
                android:visibility="invisible" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">


        </GridView>
        <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                      android:layout_height="wrap_content"
        android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                <RelativeLayout
                        android:id="@+id/postRL"
                        android:layout_width="151dp"
                        android:layout_height="151dp">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/bg"
                            android:scaleType="fitXY"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="9dp">

                        <ImageView
                                android:id="@+id/postIV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:gravity="center"
                                android:src="@mipmap/img"
                                android:visibility="visible">

                        </ImageView>

                        <TextView
                                android:id="@+id/contentsTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:textSize="13dp"
                                android:textColor="#3E3A39"
                                android:visibility="gone"/>


                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/myproIV"
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:src="@mipmap/alram_my" />

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="post_0904"
                        android:textSize="15.6dp" />

            </LinearLayout>

        </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메시지를 보내려면 위에있는\n Match 상대를 누르세요"
                android:textColor="#8F8E8A"/>




        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#888888" />

        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="23.37dp"
                    android:layout_height="22.42dp"
                    android:src="@mipmap/noclickhome" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="23.37dp"
                    android:layout_height="22.42dp"
                    android:src="@mipmap/plus" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"

                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="알림"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="11.75dp">

                    <ImageView
                        android:layout_width="23.37dp"
                        android:layout_height="22.42dp"
                        android:src="@mipmap/clickmy" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textSize="10dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@drawable/circle_red"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:paddingLeft="2.5dp"
                        android:paddingRight="2.5dp"
                        />


                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible"
                    android:background="#D0D0D0"
                    />




            </RelativeLayout>






        </LinearLayout>








    </LinearLayout>











</LinearLayout>