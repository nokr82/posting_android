<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/myIV"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/myimg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="post_0904"
            android:gravity="center_vertical"/>


        <ImageView
            android:id="@+id/menuIV"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:orientation="vertical"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="327.98dp"
            android:layout_height="328.18dp"
            android:background="@mipmap/wtite_bg"
            >

            <ImageView
                android:id="@+id/imgIV"
                android:layout_width="287.4dp"
                android:layout_height="290.58dp"
                android:layout_centerInParent="true">



            </ImageView>




            <ImageView
                android:layout_width="40.2dp"
                android:layout_height="40.2dp"
                android:src="@mipmap/blue"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                />



        </RelativeLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="42.5dp"
                android:layout_height="42.5dp"
                android:layout_marginLeft="26.6dp"
                android:id="@+id/writerIV"
                android:src="@mipmap/myimg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12.4dp"
                android:textSize="16.33dp"
                android:text="lala_girl"
                android:id="@+id/wnameTX"/>
            <TextView
                android:id="@+id/upTX"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="26.2dp"
                android:textSize="11dp"
                android:text="8월31일"/>
            <ImageView

                android:id="@+id/policeIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/police"
                android:padding="15dp"/>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#A19F9B"

            />






    </LinearLayout>

    <ScrollView
        android:layout_marginTop="18.47dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55">

        <LinearLayout
            android:layout_marginLeft="34.1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="안녕하세요 이화여대 17학번 영문학과 재학생이며,\n부전공은 국어교육학 입니다.
\n인문학 스터디 그룹원 모집중입니다.\n대상 : 고대/이대/서강대 재학생이면 누구나\n 인문학에 관심 있는 16~18 학번"
                android:textSize="13.6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#스터디"
                    android:textColor="#063588"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#스터디"
                    android:textColor="#063588"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#인문학"
                    android:textColor="#063588"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#인문학스터디"
                    android:textColor="#063588"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#STUDY"
                    android:textColor="#063588"
                    android:textSize="13dp"/>

            </LinearLayout>

            <ListView
                android:id="@+id/reLV"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




            </ListView>






        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chat_plus"
            android:padding="5dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@mipmap/chat_bg">


            <EditText
                android:id="@+id/reET"
                android:layout_marginLeft="17.23dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content"
                android:hint="메시지를 입력하세요..."
                android:textSize="13.6dp"/>


            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/smile"/>




        </LinearLayout>



        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:src="@mipmap/police"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#A19F9B"

        />







</LinearLayout>








