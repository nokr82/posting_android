                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17.23dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="댓글을 입력하세요..."
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="10.5dp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/smile" />

            </LinearLayout>


            <View
                android:layout_width="48dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/saveLL"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="30.8dp"
            android:layout_marginRight="30.8dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="#FAC841"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:src="@mipmap/mycoupon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#063588"
