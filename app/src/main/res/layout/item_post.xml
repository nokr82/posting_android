<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/postRL"
        android:layout_width="139dp"
        android:layout_height="140dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="9dp">

            <ImageView
                android:id="@+id/postIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:gravity="center"
                android:visibility="gone">

            </ImageView>

            <TextView
                android:id="@+id/contentsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textSize="13dp"
                android:textColor="#3E3A39"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/countLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@mipmap/postbg_logo"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3.25dp"
                android:layout_marginLeft="4.25dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/leftCntTV"
                    android:layout_marginLeft="4.9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="17.67dp"
                    android:textColor="#575759"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>