<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/finishLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/x" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="16dp">

            <RelativeLayout
                    android:layout_width="78dp"
                    android:layout_height="wrap_content">

                <Spinner
                        android:id="@+id/most4SP"
                        android:popupBackground="@drawable/background_border_707070"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </Spinner>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/semo" />

            </RelativeLayout>


        </LinearLayout>
        <TextView
                android:id="@+id/nextTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15.3dp"
                android:text="등록"
                android:textColor="#063588"
                android:textSize="14dp"

        />


    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/sale2LL">

            <TextView
                    android:layout_marginTop="41.87dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="할인율 적용"
                    android:textSize="14dp"
                    android:layout_margin="12dp"
                    android:textColor="#063588"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/semo" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#888888" />


            <LinearLayout
                    android:id="@+id/saleLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:visibility="visible"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="상품명(10자 이내)"
                        android:textSize="14dp"
                        android:textColor="#8F8E8A"
                        android:background="@null"
                        android:paddingLeft="7dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/titleET"
                        android:textSize="14dp"
                        android:background="@null"
                        android:paddingLeft="7dp"
                        android:gravity="right|center_vertical"
                        android:text=""/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#888888"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="할인율"
                            android:textSize="14dp"
                            android:textColor="#8F8E8A"
                            android:background="@null"
                            android:paddingLeft="7dp"
                            android:layout_marginRight="5dp" />

                    <EditText
                        android:id="@+id/saleET"
                        android:gravity="right|center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:background="@null"
                        android:textSize="14dp" />

                    <TextView
                            android:id="@+id/pwET"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="40dp"
                            android:textColor="#8F8E8A"
                            android:text="%"
                            android:textSize="14dp"
                            android:background="@null"
                            android:paddingLeft="7dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="기간"
                        android:textColor="#8F8E8A"
                        android:textSize="14dp"
                        android:background="@null"
                        android:paddingLeft="7dp"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:hint="YY/MM/DD"
                                android:textSize="14dp"
                                android:id="@+id/startdateTV" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="~"
                                android:textSize="14dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:hint="YY/MM/DD"
                                android:textSize="14dp"
                                android:id="@+id/enddateTV" />

                    </LinearLayout>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#888888"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="내용"
                        android:textSize="14dp"
                        android:textColor="#8F8E8A"
                        android:background="@null"
                        android:paddingLeft="7dp"
                        android:layout_marginRight="5dp"/>

                    <EditText
                        android:id="@+id/content2ET"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="ex_일부품목제외"
                        android:textSize="14dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#888888" />

            </LinearLayout>



            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/coupon2LL">

                <TextView
                        android:layout_marginTop="41.87dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="무료쿠폰"
                        android:textSize="14dp"
                        android:layout_margin="12dp"
                        android:textColor="#063588"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/semo" />


            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888"
            />


            <LinearLayout
                android:id="@+id/couponLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                    <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="상품명(10자 이내)"
                            android:textSize="14dp"
                            android:textColor="#8F8E8A"
                            android:background="@null"
                            android:paddingLeft="7dp"
                            android:layout_marginRight="5dp"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/title2ET"
                            android:textSize="14dp"
                            android:background="@null"
                            android:paddingLeft="7dp"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#888888"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="기간"
                        android:textColor="#8F8E8A"
                        android:textSize="14dp"
                        android:background="@null"
                        android:paddingLeft="7dp"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="YY/MM/DD"
                            android:textSize="14dp"
                            android:id="@+id/startdate2TV"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="~"
                            android:textSize="14dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="YY/MM/DD"
                            android:textSize="14dp"
                            android:id="@+id/enddate2TV"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="내용"
                        android:textSize="14dp"
                        android:textColor="#8F8E8A"
                        android:background="@null"
                        android:paddingLeft="7dp"
                        android:layout_marginRight="5dp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="ex_1인 1매한정/\n아메리카노구입시"
                        android:textSize="14dp"
                        android:id="@+id/content3ET"
                        android:background="@null"
                        android:gravity="right|center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store2LL">

                <TextView
                        android:layout_marginTop="41.87dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="가격할인 적용"
                        android:textSize="14dp"
                        android:layout_margin="12dp"
                        android:textColor="#063588"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/semo" />


            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888"
            />


            <LinearLayout
                android:id="@+id/storeLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">



                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                    <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="상품명(10자 이내)"
                            android:textSize="14dp"
                            android:textColor="#8F8E8A"
                            android:background="@null"
                            android:paddingLeft="7dp"
                            android:layout_marginRight="5dp"/>

                    <EditText
                            android:id="@+id/title3ET"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:hint=""
                            android:textSize="14dp"
                            android:background="@null"
                            android:paddingLeft="7dp"/>

                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#888888"
                />


                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#888888"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:text="할인금액"
                        android:textColor="#8F8E8A"
                        android:textSize="14dp"
                        android:layout_marginRight="5dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:background="@null"
                        android:id="@+id/moneyET" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:textColor="#8F8E8A"
                            android:text="원"
                            android:textSize="14dp"
                            android:background="@null"
                            android:paddingLeft="7dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="기간"
                        android:textColor="#8F8E8A"
                        android:textSize="14dp"
                        android:background="@null"
                        android:paddingLeft="7dp"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="YY/MM/DD"
                            android:textSize="14dp"
                            android:id="@+id/startdate3TV"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="~"
                            android:textSize="14dp"
                            android:gravity="center_vertical" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:hint="YY/MM/DD"
                                android:textSize="14dp"
                                android:id="@+id/enddate3TV"
                                android:gravity="center" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                    <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="내용"
                            android:textSize="14dp"
                            android:textColor="#8F8E8A"
                            android:background="@null"
                            android:paddingLeft="7dp"
                            android:layout_marginRight="5dp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="ex_에스프레소 전품목/\n중복할인 불가"
                        android:textSize="14dp"
                        android:id="@+id/content4ET"
                        android:background="@null"
                        android:gravity="right|center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#888888" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43.7dp"
            android:orientation="horizontal"
            android:visibility="gone">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="11.75dp"
                    android:gravity="center"
                    android:text="갤러리"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="#D0D0D0"
            />

        </RelativeLayout>

        <RelativeLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="카메라"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="11.75dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="#D0D0D0"
                    android:visibility="invisible"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TEXT"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="11.75dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="visible"
                    android:background="#063588"
            />
        </RelativeLayout>






    </LinearLayout>

</LinearLayout>