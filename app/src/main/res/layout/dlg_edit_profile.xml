<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_707070">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00000000">

            <TextView
                android:padding="10dp"
                android:textColor="#20408C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로필 이미지 변경"
                android:background="#00000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#A19F9B" />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#00000000">

                <TextView
                    android:id="@+id/galleryTV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="21dp"
                    android:gravity="center_vertical"
                    android:text="갤러리에서 가져오기"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/cameraTV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="카메라로 사진찍기"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/cancelTV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="취소"
                    android:textColor="#888888" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>