<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    
    
    <RelativeLayout
        android:layout_width="151.05dp"
        android:layout_height="154.56dp"
        android:background="@mipmap/storage_bg">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32"
            android:textSize="10dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="50dp"
            android:background="@drawable/circle_red"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            />
        </LinearLayout>
        
        <ImageView
            android:id="@+id/storageIV"
            android:layout_width="133.34dp"
            android:layout_height="137.85dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/storage_img"
            android:padding="2dp"/>




    </RelativeLayout>
    











</LinearLayout>