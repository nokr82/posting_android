<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/backLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:id="@+id/meeting2RL"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <Spinner
                        android:id="@+id/meetingSP2"
                        android:popupBackground="@drawable/background_border_707070"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null">

                </Spinner>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/semo" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mostRL"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <Spinner
                        android:popupBackground="@drawable/background_border_707070"
                        android:id="@+id/mostSP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null">

                </Spinner>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/semo" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/nextLL2">

                <TextView
                    android:id="@+id/next2TX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15.3dp"
                    android:text="다음"
                    android:textColor="#063588"
                    android:textSize="14dp"
                    />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#D0D0D0"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <posting.devstories.com.posting_android.base.RationalRelativeLayout
                android:id="@+id/popupRL"
                android:layout_marginLeft="8.5dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                app:ratio="139:140"
                android:background="@mipmap/text_bg"
                android:paddingTop="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="7dp"
                android:paddingBottom="7dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/img2RL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/captureIV"
                        android:scaleType="centerCrop"/>

                </RelativeLayout>

            </posting.devstories.com.posting_android.base.RationalRelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                    <EditText
                        android:id="@+id/contentET"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="15dp"
                        android:minHeight="90dp"
                        android:gravity="top"
                        android:hint="문구입력"/>

            </LinearLayout>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43.7dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11.75dp"
                android:gravity="center"
                android:text="갤러리"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#D0D0D0"
                />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="카메라"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11.75dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#D0D0D0"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TEXT"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11.75dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:background="#D0D0D0"
                />
        </RelativeLayout>






