<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/finishLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/x" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/postingRL"
                android:layout_width="113.5dp"
                android:layout_height="116dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/mybg">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="103.5dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/imageIV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/mybgpost"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                        android:visibility="gone">

                    </ImageView>

                    <TextView
                        android:id="@+id/contentsTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:visibility="gone"/>

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/green" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90.48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Posting"
                    android:textSize="15.5dp"
                    android:textColor="#8F8E8A" />

                <TextView
                    android:id="@+id/postingCntTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15.5dp"
                    android:text="7/16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90.48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Match"
                    android:textSize="15.5dp"
                    android:textColor="#8F8E8A" />

                <TextView
                    android:id="@+id/matchCntTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15.5dp"
                    android:text="6" />

            </LinearLayout>


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.95dp">

            <LinearLayout
                android:id="@+id/addProfileLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="12.15dp">



            </LinearLayout>

        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="메시지를 보내려면 위에있는\n Match 상대를 누르세요"
                android:textColor="#8F8E8A" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>