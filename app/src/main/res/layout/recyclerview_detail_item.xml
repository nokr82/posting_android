<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <posting.devstories.com.posting_android.base.RationalRelativeLayout
        android:id="@+id/postingLL"
        android:layout_width="286.02dp"
        android:layout_height="292.67dp"
        android:layout_gravity="center"
        android:background="@mipmap/wtite_bg"
        app:ratio="1:1">

        <posting.devstories.com.posting_android.base.RationalRelativeLayout
            android:layout_width="247.23dp"
            android:layout_height="261.21dp"
            android:layout_centerInParent="true"
            app:ratio="1:1">

            <ImageView
                android:id="@+id/imgIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/contentsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLines="3"
                android:ellipsize="end"
                android:text=""
                android:visibility="gone" />

        </posting.devstories.com.posting_android.base.RationalRelativeLayout>

    </posting.devstories.com.posting_android.base.RationalRelativeLayout>

</LinearLayout>