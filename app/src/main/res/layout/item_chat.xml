<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/myLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_margin="9.5dp">

            <TextView
                android:id="@+id/myTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요"
                android:visibility="visible"
                android:textSize="10.5dp"
                android:textColor="#050000"
                android:background="@drawable/background_round_ffe330"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"/>

            <ImageView
                android:id="@+id/myImageIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9.5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/otherIV"
                android:layout_width="43.89dp"
                android:layout_height="43.89dp"
                android:layout_gravity="center"
                android:src="@mipmap/myimg"
                android:layout_marginRight="9.5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/otherTV"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요"
                    android:textSize="10.5dp"
                    android:textColor="#050000"
                    android:background="@drawable/chat"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"/>

                <ImageView
                    android:id="@+id/otherImageIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>